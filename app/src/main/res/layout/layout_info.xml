<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/black">


<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目制作人"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/textView_mengfang"
            android:layout_margin="10dp"/>


        <TextView
            android:id="@+id/textView_mengfang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/textView_xiaoyun"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="梦芳"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView_xiaoyun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小云"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/textView_heyang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="何洋"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView_xiaoyun"
            android:layout_margin="10dp"
            />


        <TextView
            android:id="@+id/textView_7212519"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7212519"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView_heyang"
            />

        <ImageView
            android:id="@+id/image_dmf"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/cup"
            android:visibility="invisible"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>